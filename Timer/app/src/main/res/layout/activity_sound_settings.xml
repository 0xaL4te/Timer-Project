<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Notification Sound"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Sound Option 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioSound1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 1" />

        <Button
            android:id="@+id/previewSound1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview" />
    </LinearLayout>

    <!-- Sound Option 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioSound2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 2" />

        <Button
            android:id="@+id/previewSound2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioSound3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound 3" />

        <Button
            android:id="@+id/previewSound3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview" />
    </LinearLayout>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Save Selection"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>